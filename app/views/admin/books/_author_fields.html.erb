<fieldset>
  <%= f.label :name, "Author's name" %>
  <%= f.text_field :name, class: "form-control",
    id: "author_name_filter", data: { autocomplete_source: authors_path} %>
  <%= f.label :birthday %>
  <%= f.date_select :birthday, :start_year => 1960, :end_year => Date.current.year,
    :order => [:day, :month, :year] %>
</fieldset>
