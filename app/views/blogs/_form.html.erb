<%= form_for(@blog) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> <%= t ".hi" %></h2>
      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :auth_link, class: "form-label" %>
    <%= form.text_field :auth_link %>
  </div>

  <div class="field">
    <%= form.label :body, class: "form-label" %>
    <%= form.cktext_area :body %>
  </div>

  <%= form.hidden_field :author, value: current_user.name %>
  <%= form.hidden_field :date, value: Time.current %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
