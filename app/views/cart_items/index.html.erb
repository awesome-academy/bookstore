<% provide(:title, (t ".title"))%>
<div class="kenh14-border" id="blog-title" >
<h1><%=(t ".title")%></h1>
</div>
<div id="books-table">
<%= render "cart" %>
<table class="table table-hover bg-table ls-books">
  <tr>
    <td> <%= link_to (fa_icon "shopping-cart", text: t(".add")) , root_path, class: "btn btn-primary" %>
    </td>
    <td> <%= link_to (fa_icon "times", text: t(".delete_all")) , root_path, class: "btn btn-danger" %>
    </td>
    <td> <%= link_to (fa_icon "money", text: t(".checkout")) , new_order_path , class: "btn btn-warning" %>
    </td>
  </tr>
</table>
</div>
<%= paginate @items, theme: "twitter-bootstrap-3" %>
