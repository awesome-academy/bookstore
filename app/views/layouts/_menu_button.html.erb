<div id="menu-button" class="row">
  <button id="favorite-button" type="button" class="btn btn-danger"><i class="fa fa-heart"></i><%= link_to (t ".favorite"), user_favorite_books_path(current_user.id) %></button>
 <div id="cart-button" class="dropdown">
    <button class="btn btn-primary cart" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= fa_icon t(".shop") %><span class="badge"><%= current_user.cart_items.count %></span></button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <li class="dropdown-item"><%= link_to (t ".your_cart"), cart_items_path %></li>
      <li class="dropdown-item"><%= link_to (t ".purchase"), orders_path %></li>
    </div>
  </div>
 <div id="activities-button" class="dropdown">
    <button class="btn btn-primary cart" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= fa_icon t(".bell") %><span class="badge"><%= current_user.cart_items.count %></span></button>
   <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
   </div>
  </div>
</div>
