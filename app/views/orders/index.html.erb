<% provide :title, t(".order_title") %>
<div class="kenh14-border" id="blog-title" >
  <h2><%=(t ".order_title")%></h>
  </div>
<table class="table table-hover bg-table ls-books">
  <thead class="title_table">
    <tr>
      <th class="text-c"><%= t ".id" %></th>
      <th class="text-c"><%= t ".title" %></th>
      <th class="text-c"><%= t ".date" %></th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each_with_index do |order, index| %>
    <tr>
      <td class="text-c">
        <%= index_for params[:page], index, Settings.admin.book.per_page %>
      </td>
      <td class="text-c"> <%= link_to t(".order") + order.id.to_s, order_path(order) %> </td>
      <td class="text-c"> <%= order.date %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @orders, theme: "twitter-bootstrap-3" %>
